
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth.uid == userId;

      match /trips/{tripId} {
        allow read, create: if request.auth.uid == userId;
      }
    }
  }
}
